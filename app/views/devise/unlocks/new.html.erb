

<%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "html-signin" }) do |f| %>

<h2 class="text-center">Resend unlock instructions</h2>
  <%= f.error_notification %>
  <%= f.full_error :unlock_token %>

    <%= f.input :email, required: true, autofocus: true,label: false, placeholder: "Email", input_html: { class: "form-control" } %>

    <%= f.button :submit, "Resend unlock instructions", class: "btn btn-primary btn-block" %>
  
<% end %>

<div class="text-center">
	<%= render "devise/shared/links" %>
</div>