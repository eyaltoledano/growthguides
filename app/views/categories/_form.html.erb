<%= simple_form_for(@category, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

   	<%= f.input :name, required: true, autofocus: true, label: false, placeholder: "Category Name", input_html: { class: "form-control" } %>
 
    <%= f.input :description, required: true, autofocus: true, label: false, placeholder: "Category Description", input_html: { class: "form-control" } %>
   
    <br>

    <%= f.button :submit, "Save Growth Category", class: "btn btn-primary btn-block" %>

<% end %>
