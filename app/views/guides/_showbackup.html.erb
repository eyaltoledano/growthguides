
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="box">
                <div class="box-icon">
                    <span class="fa fa-4x"><%= image_tag @guide.image.url, class: "img-responsive img-circle2"  %></span>
                </div>
                <div class="info">
                    <h4 class="text-center"><%= @guide.name %></h4>
                    <h5 class="text-center">Authored by <%= @guide.author %></h5>
                    <h5 class="text-center"><%= link_to "8 Reviews", "#", id: "reviews" %></h5>
                     <%= render 'sidecta' %>

                      <div class="col-md-2"></div>
                      <div class="col-md-8">
                        <h1 class="lead"><%= @guide.description %></h1>
                      </div>
                      <div class="col-md-2"></div>
                  

                    <div class="row">
                      <div class="sidebar-module sidebar-module-inset pull-left text-center">
                        <div class="col-md-4">
                          <h3>Ingredients</h3>
                          <p><%= @guide.longdescription %></p>
                        </div>

                        <div class="col-md-4">
                          <h3>Difficulty</h3>
                          <p>Beginner</p>
                        </div>

                        <div class="col-md-4">
                          <h3>Time Needed</h3>
                          <p>4-6 hours</p>
                        </div>
                      </div>
                    </div>
                    
                    <div class="row">
                      <p><%= @guide.longdescription %></p>
                    </div>
                    
                    
                    
                    
                    
                    
                    <br><br>
                    

                      <div class="col-md-4"></div>
                      <div class="col-md-4">
                        <% if @guide.availability == true %>
                          <a id="cta" href="#" class="btn btn-success btn-block">Get Guide for 
                            <% if @guide.price > 1 %>
                              $<%= @guide.price / 100 %>
                            <% else %>
                              FREE
                            <% end %>
                          </a>
                        <% else %>
                         <a id="cta" class="btn btn-danger btn-block" disabled="disabled">Guide Unavailable</a>
                        <% end %>
                                            
                        <br>
                      </div>
                  </div>
            </div>
        </div>
  </div>

<br>


<%= link_to 'Edit', edit_guide_path(@guide) %> | <%= link_to 'Delete', @guide, method: :delete, data: {
   title: 'Danger Zone', 
   text: 'Are you certain you want to delete this guide?',
   confirm: 'Are you sure?',
   :'confirm-button-text' => 'DO IT, DELETE',
   :'cancel-button-text' => 'Cancel',
   :'confirm-button-color' => '#f84545',
} %> | <%= link_to 'Back', guides_path %>


